@import '../_variables.styl'
.week-challenges-item
  display flex
  margin 0 auto
  color soft-gray
  border-top solid 1px gray
  width 100%
  background-color soft-green
  &-container
    position relative
    width 100%
    min-height 110px
    padding 20px
    h2
      font-weight 400
      font-size 3rem
      color soft-black
    p
      padding-top 5px
      font-size 1.6rem
      line-height 2.6rem
      letter-spacing .2rem
    a
      position absolute
      display inline-block
      right 27px
      bottom 30px