@import '../_variables.styl'
.week-challenges-item
  display flex
  min-height 160px
  margin 0 auto
  color soft-gray
  border-top solid 1px gray
  width 100%
  background-color soft-green
  &-container
    position relative
    width 100%
    padding 20px
    h2
      font-size 2rem
      font-weight 400
      font-size 3.2rem
      color soft-black
    p
      padding-top 5px
      font-size 2rem
      line-height 2.6rem
      letter-spacing .2rem
    a
      position absolute
      display inline-block
      right 20px
      bottom 10px