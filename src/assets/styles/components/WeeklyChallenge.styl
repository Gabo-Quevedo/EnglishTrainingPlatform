@import '../_variables.styl'

.weekly-challenge
  align-items center
  width 100%
  min-width 320px
  height 40vh
  background-image: url('../../static/weekChallenge.svg')
  background-position center
  background-size cover
  color just-white
  background-repeat no-repeat
.weekly-challenge-container
  display flex
  flex-direction column
  justify-content space-evenly
  align-items center
  height 100%
.weekly-challenge-container--title
  text-align center
  transform rotate(-5deg)
  font-size 3.2rem
.weecky-challenge-container--desc
  margin 0 auto
  width 80%
  text-align center
  transform rotate(3deg)
  font-size 1.8rem
  letter-spacing 3.6px
.weekly-challenge-container--button
  display inline-block
  width 220px
  font-size 1.9rem
  text-decoration none
  padding 10px 20px
  color train-yellow
  text-align center
  line-height 30px
  letter-spacing: 2px
  border-radius 45px
  border 1px solid train-yellow
  transition background-color .5s, color .5s
.weekly-challenge-container--button:hover
  background-color train-yellow
  color warm-black