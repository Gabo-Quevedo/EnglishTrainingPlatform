@import '../_variables.styl'

footer
  display flex
  justify-content center
  height 135px
  width 100%
  max-width 1100px
  margin 0 auto
  background-color bold-black
.footer-container
  display flex
  width 90%
  min-width 288px
  max-width 1100px
  height 100%
  li
    list-style none
    padding 5px 0
    a
      color train-yellow
      text-decoration none
      font-size 1.1rem
.footer-container--info
  display flex
  flex-direction column
  justify-content center
  align-items center
  height 100%
  width 100%
.footer-container--logo
  display flex
  justify-content center
  height 100%
  width 100%