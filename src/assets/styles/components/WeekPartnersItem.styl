@import '../_variables.styl'
.week-partners-item
  display flex
  margin 0 auto
  color soft-gray
  border-top solid 1px gray
  width 100%
  background-color soft-blue
  &-container
    display flex
    justify-content space-evenly
    max-height 90px
    width 100%
  &-container__picture
    display flex
    justify-content center
    align-items center
    width 30%
    text-align center
    img
      height 70%
  &-container__info
    display flex
    flex-direction column
    justify-content flex-end
    width 50%
    padding 1rem
    h1
      font-size 3rem
      padding .6rem 0
      font-weight 400
      color soft-black
    h5
      font-weight 300
      font-size 1.9rem
  &-container__detail
    display flex
    flex-direction column
    justify-content space-around
    align-items center
    width 20%
    .flag
      height 30%
    .hat
      height 30%