@import '../_variables.styl'
.week-skills-item
  display flex
  margin 0 auto
  border-top solid 1px gray
  width 100%
  background-color soft-purple
  &-container
    min-height 110px
    h2
      font-size 3.2rem
      text-transform capitalize
      letter-spacing 1rem
      color soft-black
      padding 0 0 0 2rem
    position relative
    width 100%
    padding 20px
    ul
      list-style none
      display flex
      justify-content space-around
      padding-top 2rem
      width 100%
      li
        font-size 2.1rem
        height 100%
        label
          color soft-gray
          display flex
          flex-direction column
          justify-content center
          align-items center
