soft-white = #FCFCFC
soft-black = #282623

header.header 
  position relative
  display flex
  flex-direction: column
  justify-content: center
  width 100%
  min-width: 320px
  height 240px
  text-align center
  background linear-gradient(216deg, rgba(104,104,104,1) 0%, rgba(25,25,25,1) 100%);

header img 
  width 50px
  align-self: center

header .header--timeleft-container
 width: 90%
 min-width 288px
 max-width 900px
 margin-top 13px
 text-align center
 align-self center
 
header h1
  font-size 2.7rem
  font-weight: 300
  letter-spacing: 2.5px

header p
  margin-top 13px
  font-size 1.9rem
  font-weight: 300
  letter-spacing: 2.5px

header .header--button
  position absolute
  left calc(50% - 90px)
  top 188px
  display block
  margin-top 35px
  padding 8px
  width 188px
  background-color soft-white
  box-shadow 0px 4px 8px rgba(89, 73, 30, 0.16)
  border none
  border-radius: 4px
  font-size: 1.4rem
  text-decoration none
  color soft-black