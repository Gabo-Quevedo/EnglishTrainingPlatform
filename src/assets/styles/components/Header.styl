@import '../_variables.styl'

.header
  position relative
  display flex
  align-items center
  width 100%
  min-width 320px
  height 240px
  text-align center
  background linear-gradient(216deg, rgba(104,104,104,1) 0%, rgba(25,25,25,1) 100%)
  &--timeleft-container
    display flex
    flex-direction column
    justify-content space-around
    height 60%
    margin 0 auto
    width 90%
    min-width 288px
    text-align center
    align-self center
    h1
      font-size 2.7rem
      font-weight 300
      letter-spacing 2.5px
    p
      font-size 1.9rem
      font-weight 300
      letter-spacing 2.5px
  &__img  
    margin-left 30px
    width 200px
  &__menu
    position absolute
    right 10px
    top 25px
    ul
      list-style none
      visibility: hidden;
      opacity: 0;
      transition: visibility 0s, opacity 0.5s linear;
    li
      margin 10px 0px
      font-size 1.2rem
      a
        color soft-white
        text-decoration none
      a:hover
        color train-yellow-hover
        text-decoration none
      opacity 1
  &__menu:hover ul
    visibility visible
    opacity 1
  &__menu--profile
    text-align right 
    img
      width 40px
      object-fit cover
      border-radius 100%
