@import '../_variables.styl'
.week-topics-item
  display flex
  min-height 110px
  margin 0 auto
  color soft-gray
  background-color soft-red
  border-top solid 1px gray
  width 100%
  &-container
    position relative
    width 100%
    padding 20px
    h2
      font-size 2rem
      font-weight 400
      font-size 3rem
      color soft-black
    p
      padding-top 5px
      font-size 1.6rem
      line-height 2.6rem
      letter-spacing .2rem
    a
      position absolute
      display inline-block
      right 20px
      bottom 10px

.topicRequest
  width 100%
  &-container
    button:hover
      background train-yellow-hover
    button
      width 100%
      background-color train-yellow
      height 50px
      font-size 1.8rem
      font-weight 300
      color soft-black
      border 0
      cursor pointer
  &-form-container
    display flex
    justify-content center
    align-items  center
    flex-direction column
    width 100%
    padding 25px 0
    background-color bold-black
    label 
      display flex
      flex-direction column
      width 90%
      padding 5px
      text-align center
      font-size 1.9rem
      input
        font-size 1.9rem
        padding 10px 20px
        border-radius 18px
        color soft-gray
        border 0
        margin 10px 0 17px 0
        outline none
        width 100%
      select
        font-size 1.9rem
        padding 10px 20px
        border-radius 18px
        color soft-gray
        border 0
        margin 10px 0 17px 0
        outline none
        width 100%
      textarea
        font-size 1.9rem
        padding 10px 20px
        border-radius 18px
        color soft-gray
        border 0
        margin 10px 0 17px 0
        outline none
        width 100%
.submit-button
  display inline-block
  width: 150px
  font-size: 1.5rem
  text-decoration none
  padding 10px
  font-weight 500
  cursor pointer
  background-color train-yellow
  color soft-black
  margin-top 10px
  text-align center
  letter-spacing: 1px
  border-radius 25px
  border 1px solid train-yellow
  transition background-color .5s, color .5s
.topicRequest-formBody
  // display none
.submit-button:hover
  background-color train-yellow-hover