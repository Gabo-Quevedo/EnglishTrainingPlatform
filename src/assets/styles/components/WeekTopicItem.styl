@import '../_variables.styl'

.topicAdvise-container
  h1
    text-align center
    background-color bold-black
    padding 20px 0
.week-topics-item
  display flex
  min-height 110px
  margin 0 auto
  color soft-gray
  background-color soft-red
  border-top solid 1px gray
  width 100%
  &-container
    position relative
    width 100%
    padding 20px
    h2
      font-size 2rem
      font-weight 400
      font-size 3rem
      color soft-black
    p
      padding-top 5px
      font-size 1.6rem
      line-height 2.6rem
      letter-spacing .2rem
    a
      position absolute
      display inline-block
      right 20px
      bottom 10px
    &-container__statusAction
      display flex
      justify-content space-between
      padding-top 15px
      align-items center
    span
      font-size 1.3rem
    a
      color red
      font-size 1.5rem