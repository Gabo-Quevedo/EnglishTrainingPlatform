@import '../_variables.styl'
.ss-item
  position relative
  display flex
  min-height 160px
  color soft-gray
  &-container
    background-color soft-green
    margin 0 auto
    padding 20px
    h2
      font-size 2rem
      font-weight 400
    p
      padding-top 5px
      font-size 1.2rem
      line-height 1.6rem
      letter-spacing .2rem
    a
      position absolute
      display inline-block
      right 20px
      bottom 10px